@model List<ShopBridge> 
@{
    ViewBag.Title = "Index";
    int i = 1;
}
<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script>
    function Edit(id) {
        document.location.href = "inventory/Edit?id=" + id;
    }
    
    function Delete(id) {
          if (id > 0) {
            var checkstr = confirm('are you sure you want to delete this?');
            if (checkstr == true) {                
                document.location.href = "Inventory/Delete?id="+id;
            }
        }
    }
</script>
<h4>Inventory List</h4>
<div>
    @*<button type="button" class="btn btn-primary">Create New Inventory</button>*@
    @Html.ActionLink("Create New Inventory", "Create", "Inventory", new { @type = "button" ,@class="btn btn-primary"})
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">S.No</th>
            <th scope="col">Name</th>
            <th scope="col">Descriptioin</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Available Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
        foreach (var item in Model)
        {
        <tr>
            <td>@i</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.Qty</td>
            <td>
                @if (item.Status == true || item.Status.ToString() == "true")
                {
                    <text>Yes</text>
                }
                else
                {
                    <text>No</text>
                }
                    </td>
            <td>

                <button class="btn btn-primary" onclick="return Edit('@item.Id')">Edit</button>
                <button class="btn btn-primary" onclick="return Delete('@item.Id')">Delete</button>

            </td>
        </tr>
            i++;
        }
        }
        else
        {
            <tr>
                <td><b>No Record</b></td>
            </tr>
        }
    </tbody>
</table>



